{
    "name": "OctoChan",
    "scopeName": "source.octochan",
    "fileTypes": ["octo"],
    "patterns": [
        {
            "include": "#comments"
        },
        {
            "include": "#keywords"
        },
        {
            "include": "#strings"
        },
        {
            "include": "#numbers"
        },
        {
            "include": "#functions"
        },
        {
            "include": "#variables"
        },
        {
            "include": "#operators"
        },
        {
            "include": "#roles"
        }
    ],
    "repository": {
        "comments": {
            "patterns": [
                {
                    "name": "comment.line.number-sign.octochan",
                    "match": "#.*$"
                }
            ]
        },
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.control.octochan",
                    "match": "\\b(if|else|for|while|in|required_role)\\b"
                },
                {
                    "name": "keyword.operator.octochan",
                    "match": "\\b(create_alias|run_scenario|list_scenarios|has_permission)\\b"
                },
                {
                    "name": "storage.type.octochan",
                    "match": "\\b(true|false|null)\\b"
                }
            ]
        },
        "strings": {
            "patterns": [
                {
                    "name": "string.quoted.double.octochan",
                    "begin": "\"",
                    "end": "\"",
                    "patterns": [
                        {
                            "name": "constant.character.escape.octochan",
                            "match": "\\\\."
                        }
                    ]
                }
            ]
        },
        "numbers": {
            "patterns": [
                {
                    "name": "constant.numeric.octochan",
                    "match": "\\b\\d+(\\.\\d+)?\\b"
                }
            ]
        },
        "functions": {
            "patterns": [
                {
                    "name": "entity.name.function.octochan",
                    "match": "\\b(print|system_info|user_info|apply_diff|filter|count|compile_native)\\b"
                }
            ]
        },
        "variables": {
            "patterns": [
                {
                    "name": "variable.other.octochan",
                    "match": "\\$[a-zA-Z_][a-zA-Z0-9_]*"
                },
                {
                    "name": "variable.other.octochan",
                    "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*(?=\\s*=)"
                }
            ]
        },
        "operators": {
            "patterns": [
                {
                    "name": "keyword.operator.pipeline.octochan",
                    "match": "\\|>"
                },
                {
                    "name": "keyword.operator.octochan",
                    "match": "(==|!=|<=|>=|<|>|\\+|\\-|\\*|\\/|=)"
                }
            ]
        },
        "roles": {
            "patterns": [
                {
                    "name": "string.quoted.double.role.octochan",
                    "match": "(?<=required_role:\\s)\"[^\"]*\""
                }
            ]
        }
    }
}